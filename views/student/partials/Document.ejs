<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <!-- Document Management Section -->
  <div class="document-section">
    <h2 class="section-title">Document Management</h2>
    <p class="section-subtitle">Organize and track your academic documents</p>

    <div class="document-grid">
      <!-- Academic Documents -->
      <div class="doc-card">
        <div class="view-icon">👁️</div>
        <div class="doc-header">
          <div class="doc-icon academic">📚</div>
          <div class="doc-title">Academic</div>
        </div>
        <div class="doc-stats">
          <div class="doc-stat">
            <div class="stat-dot green"></div><span>5</span>
          </div>
          <div class="doc-stat">
            <div class="stat-dot yellow"></div><span>2</span>
          </div>
          <div class="doc-stat">
            <div class="stat-dot red"></div><span>1</span>
          </div>
        </div>
        <button class="add-doc-btn">➕ Add Document</button>
      </div>

      <!-- Internships -->
      <div class="doc-card">
        <div class="view-icon">👁️</div>
        <div class="doc-header">
          <div class="doc-icon internships">🏢</div>
          <div class="doc-title">Internships</div>
        </div>
        <div class="doc-stats">
          <div class="doc-stat">
            <div class="stat-dot green"></div><span>3</span>
          </div>
          <div class="doc-stat">
            <div class="stat-dot yellow"></div><span>1</span>
          </div>
          <div class="doc-stat">
            <div class="stat-dot red"></div><span>0</span>
          </div>
        </div>
        <button class="add-doc-btn">➕ Add Document</button>
      </div>

      <!-- Extracurricular -->
      <div class="doc-card">
        <div class="view-icon">👁️</div>
        <div class="doc-header">
          <div class="doc-icon extracurricular">🎯</div>
          <div class="doc-title">Extracurricular</div>
        </div>
        <div class="doc-stats">
          <div class="doc-stat">
            <div class="stat-dot green"></div><span>2</span>
          </div>
          <div class="doc-stat">
            <div class="stat-dot yellow"></div><span>0</span>
          </div>
          <div class="doc-stat">
            <div class="stat-dot red"></div><span>1</span>
          </div>
        </div>
        <button class="add-doc-btn">➕ Add Document</button>
      </div>

      <!-- Certificates -->
      <div class="doc-card">
        <div class="view-icon">👁️</div>
        <div class="doc-header">
          <div class="doc-icon certificates">🏆</div>
          <div class="doc-title">Certificates</div>
        </div>
        <div class="doc-stats">
          <div class="doc-stat">
            <div class="stat-dot green"></div><span>6</span>
          </div>
          <div class="doc-stat">
            <div class="stat-dot yellow"></div><span>1</span>
          </div>
          <div class="doc-stat">
            <div class="stat-dot red"></div><span>0</span>
          </div>
        </div>
        <button class="add-doc-btn">➕ Add Document</button>
      </div>
    </div>
  </div>

  <!-- Overview Statistics -->
  <div class="overview-stats">
    <div class="overview-stat">
      <div class="stat-value verified">16</div>
      <div class="stat-label">Verified Documents</div>
    </div>
    <div class="overview-stat">
      <div class="stat-value pending">4</div>
      <div class="stat-label">Pending Review</div>
    </div>
    <div class="overview-stat">
      <div class="stat-value total">20</div>
      <div class="stat-label">Total Documents</div>
    </div>
  </div>
  </div>
</body>

</html>