<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Upload SPI</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>

<body >
  <div class="content-section tab-content" id="spi-upload">
    <h2 class="mb-4">ðŸ“Š Upload SPI Excel</h2>

    <!-- Form -->
    <form id="spiForm" enctype="multipart/form-data">
      <input type="file" name="spi-file" id="file" accept=".xlsx,.xls" required>
      <button type="submit" class="btn btn-primary mt-2">Upload & Process</button>
    </form>

    <!-- Response messages -->
    <div id="responseMessage" class="mt-3"></div>
  </div>

  <!-- JS -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('spiForm');
      const responseDiv = document.getElementById('responseMessage');

      form.addEventListener('submit', async (e) => {
        e.preventDefault(); // prevent page reload

        if (!form.file.files[0]) return alert('Please select a file!');

        const formData = new FormData();
        formData.append('spi-file', form.file.files[0]);

        // Show loading message
        responseDiv.innerHTML = `<p style="color:blue">Processing file...</p>`;

        try {
          const res = await fetch('/upload-spi', {
            method: 'POST',
            body: formData
          });

          const data = await res.json();

          if (data.success) {
            responseDiv.innerHTML = `<p style="color:green">${data.message}</p>`;
            if (data.notFound && data.notFound.length > 0) {
              responseDiv.innerHTML += `<p>Student IDs not found: ${data.notFound.join(', ')}</p>`;
            }
          } else {
            responseDiv.innerHTML = `<p style="color:red">${data.message}</p>`;
          }

        } catch (err) {
          responseDiv.innerHTML = `<p style="color:red">Server error: ${err.message}</p>`;
        }
      });
    });
  </script>
</body>

</html>
